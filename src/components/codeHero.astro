---
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-12 pt-8">
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Code of Conduct
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Simple guidelines, recommendations, and expectations between everyone in the Developer Marketing Community
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://go.marketingto.dev/join"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-envelope" />

        Request an invite
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://go.marketingto.dev/slack"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-slack" />
        Log in
      </Link>
    </div>
  </div>
</main>
